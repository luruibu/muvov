# PeerJS 服务器 Dockerfile
FROM node:18-alpine

# 设置工作目录
WORKDIR /app

# 安装 PeerJS 服务器
RUN npm install -g peerjs

# 创建启动脚本
RUN echo '#!/bin/sh' > /app/start.sh && \
    echo 'exec peerjs --port ${PORT:-9000} --key ${KEY:-muvov} --path ${PATH:-/peerjs} ${EXTRA_ARGS}' >> /app/start.sh && \
    chmod +x /app/start.sh

# 暴露端口
EXPOSE 9000

# 启动命令
CMD ["/app/start.sh"]