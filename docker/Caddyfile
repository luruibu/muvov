{$DOMAIN} {
    # MIME 类型设置
    @css path *.css
    @js path *.js *.mjs
    @json path *.json
    @static path *.css *.js *.mjs *.json *.woff *.woff2 *.ttf *.eot *.png *.jpg *.jpeg *.gif *.ico *.svg

    header @css Content-Type "text/css; charset=utf-8"
    header @js Content-Type "application/javascript; charset=utf-8"
    header @json Content-Type "application/json; charset=utf-8"
    
    # SVG 文件 MIME 类型
    @svg path *.svg
    header @svg Content-Type "image/svg+xml"
    
    header @static Cache-Control "public, max-age=31536000"

    # PeerJS 代理 - 支持WebSocket
    handle /peerjs* {
        reverse_proxy peerjs-server:9000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # API 代理
    handle /api/* {
        reverse_proxy peerjs-server:9000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    # 静态文件优先处理
    handle /assets/* {
        root * /srv/muvov
        file_server
    }
    
    # 根目录静态文件
    @static_files path *.css *.js *.mjs *.json *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    handle @static_files {
        root * /srv/muvov
        file_server
    }

    # SPA 路由 - 只对非静态文件使用 try_files
    handle / {
        root * /srv/muvov
        try_files {path} /index.html
        file_server
    }

    # 启用压缩 - 优化配置
    encode {
        gzip 6
        minimum_length 1024
    }
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # 日志
    log {
        output file /var/log/caddy/access.log
        format json
    }
}